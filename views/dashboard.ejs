<%- include("templates/header") %>

<style>
    .custom-image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 200px;
        overflow: hidden;
        margin-bottom: 15px; /* Add a margin to create space between images */
    }
    .custom-image-size {
        width: 100%;
        height: auto;
    }
</style>

<div class="container">
    <h1 class="text-center mt-5">Welcome, <%= username %>!</h1>
    <p class="text-center">You are now logged in.</p>
    <div class="row">
        <div class="col-sm-4">
            <div class="custom-image-container">
                <img src="/image1.jpg" alt="Image 1" class="img-fluid img-thumbnail mb-3 custom-image-size" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="custom-image-container">
                <img src="/image2.jpg" alt="Image 2" class="img-fluid img-thumbnail mb-3 custom-image-size" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="custom-image-container">
                <img src="/image3.jpg" alt="Image 3" class="img-fluid img-thumbnail mb-3 custom-image-size" />
            </div>
        </div>
    </div>
    <!-- Add form with POST method for the logout button -->
    <form action="/logout" method="POST" class="text-center">
        <button class="btn btn-danger mt-3" type="submit">Logout</button>
    </form>
</div>

<%- include("templates/footer") %>
